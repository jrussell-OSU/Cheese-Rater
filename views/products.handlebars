<html>
<h1>Cheese Products</h1>

<a href='/'>Back to Home</a>

<h2>Add Product:</h2>
<form id="add_product" action="/products" method="post">
    Name: <input name="product_name" type="text" maxlength="50"><br><br>
    Brand: <select name="brand_ID">
        {{#each brands}}
        <option value="{{brand_ID}}">{{brand_name}}</option>
        {{/each}}
    </select><br><br>
    Type: <input name="type" type="text" maxlength="20"><br><br>
    Description: <input name="description" type="text" maxlength="255"><br><br>
    <input type="submit" value="Add Product">
</form><br>


<h2>All Products:</h2>
<table>
    <thead> 
        <th>Product Name</th> 
        <th>Product Type</th> 
        <th>Brand Name</th>
        <th>Description</th>
    </thead> 
    <tbody>
        {{#each products}} 
        <tr> 
            <td>{{product_name}}</td> 
            <td>{{type}}</td> 
            <td>{{brand_name}}</td>
            <td>{{description}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
